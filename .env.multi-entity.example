# Multi-Entity Relationship System Environment Variables

# Core Multi-Entity Features (default: true for basic features)
ENABLE_MULTI_ENTITY_RELATIONSHIPS=true
ENABLE_CHARACTER_CREATION=true
ENABLE_RELATIONSHIP_EVOLUTION=true

# Advanced Multi-Entity Features (default: false, require higher scale tiers)
ENABLE_AI_FACILITATED_INTRODUCTIONS=false
ENABLE_CROSS_CHARACTER_AWARENESS=false
ENABLE_CHARACTER_SIMILARITY_MATCHING=false
ENABLE_SOCIAL_NETWORK_ANALYSIS=false

# Graph Database Configuration (Neo4j)
ENABLE_GRAPH_DATABASE=false
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_CONNECTION_TIMEOUT=30
NEO4J_MAX_CONNECTION_POOL_SIZE=100

# Multi-Entity Memory Configuration
MULTI_ENTITY_MEMORY_ENABLED=true
CHARACTER_MEMORY_RETENTION_DAYS=365
RELATIONSHIP_DECAY_RATE=0.01
FAMILIARITY_DECAY_RATE=0.005
INTERACTION_QUALITY_THRESHOLD=0.7

# AI Self Configuration
AI_SELF_PERSONA_NAME=WhisperEngine
AI_SELF_MANAGEMENT_STYLE=collaborative
AI_SELF_LEARNING_FOCUS=user_preferences,character_development,relationship_dynamics

# Character Creation Limits
MAX_CHARACTERS_PER_USER=10
MAX_CHARACTER_NAME_LENGTH=50
MAX_CHARACTER_BACKGROUND_LENGTH=1000
CHARACTER_CREATION_COOLDOWN_MINUTES=5

# Relationship Management
MAX_RELATIONSHIPS_PER_ENTITY=100
RELATIONSHIP_STRENGTH_THRESHOLD=0.3
TRUST_LEVEL_PRECISION=0.01
COMPATIBILITY_ANALYSIS_THRESHOLD=0.3

# Performance Tuning
MULTI_ENTITY_BATCH_SIZE=50
RELATIONSHIP_QUERY_TIMEOUT=30
CHARACTER_SEARCH_LIMIT=20

# === Performance Optimization for Multi-Entity ===
# Redis caching for improved relationship lookup performance
USE_REDIS_CACHE=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_TTL_MINUTES=20

# Production optimizations
ENABLE_PRODUCTION_OPTIMIZATION=true
AI_MEMORY_OPTIMIZATION=true
ENABLE_PARALLEL_PROCESSING=true

# Multi-entity specific performance
RELATIONSHIP_CACHE_SIZE=500
CHARACTER_CACHE_SIZE=200
ENABLE_RELATIONSHIP_CACHING=true
RELATIONSHIP_CACHE_TTL_MINUTES=30
SIMILARITY_SEARCH_THRESHOLD=0.6

# Feature Toggles for Different Deployment Modes
# Desktop Mode (scale_tier=1)
DESKTOP_ENABLE_GRAPH_DATABASE=false
DESKTOP_MAX_CHARACTERS=5
DESKTOP_ENABLE_SIMILARITY_MATCHING=false

# Server Mode (scale_tier=2+)
SERVER_ENABLE_GRAPH_DATABASE=true
SERVER_MAX_CHARACTERS=10
SERVER_ENABLE_SIMILARITY_MATCHING=true
SERVER_ENABLE_NETWORK_ANALYSIS=true

# Development/Debug
MULTI_ENTITY_DEBUG=false                      # Enable multi-entity system debug logging
LOG_RELATIONSHIP_CHANGES=true                 # Log character relationship changes
LOG_INTERACTION_DETAILS=false                 # Log detailed interaction analysis
VALIDATE_RELATIONSHIP_INTEGRITY=true          # Validate relationship data integrity

# Standard Logging Configuration
LOG_LEVEL=INFO                                 # File logging level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
CONSOLE_LOG_LEVEL=INFO                         # Console logging level - can be different from file level
DEBUG_MODE=false                               # Enable general debug mode features