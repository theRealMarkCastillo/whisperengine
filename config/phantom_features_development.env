# WhisperEngine Phantom Features - Development Configuration
# Optimized for development with debugging and testing features

# =============================================================================
# PHANTOM FEATURE CONTROLS
# =============================================================================

# Development-focused phantom feature settings
ENABLE_PHANTOM_FEATURES=true
PHANTOM_FEATURES_DEBUG_MODE=true
PHANTOM_FEATURES_ROLLOUT_PERCENTAGE=100
PHANTOM_FEATURES_VERBOSE_LOGGING=true

# =============================================================================
# ADVANCED EMOTION PROCESSING
# =============================================================================

# Enable for testing, but keep resource usage low
ENABLE_ADVANCED_EMOTION_PROCESSING=true
ENABLE_LOCAL_EMOTION_ENGINE=true
ENABLE_VECTORIZED_EMOTION_PROCESSOR=false  # Disabled to save resources
ENABLE_ADVANCED_EMOTION_DETECTOR=true

# Development-friendly emotion settings
VECTORIZED_EMOTION_MAX_WORKERS=1
EMOTION_ANALYSIS_TIMEOUT=15
EMOTION_PROCESSING_DEBUG_LOGS=true

# =============================================================================
# ADVANCED CONVERSATION MANAGEMENT
# =============================================================================

# Enable selectively for development
ENABLE_ADVANCED_CONVERSATION_MANAGEMENT=true
ENABLE_PROACTIVE_ENGAGEMENT_ENGINE=false  # Can be disruptive during dev
ENABLE_ADVANCED_THREAD_MANAGER=true
ENABLE_CONCURRENT_CONVERSATION_MANAGER=false  # Not needed for single-user dev

# Development conversation settings
PROACTIVE_ENGAGEMENT_CHECK_INTERVAL=900  # Longer interval for dev
THREAD_MANAGER_MAX_ACTIVE_THREADS=3
CONCURRENT_CONVERSATIONS_LIMIT=5
CONVERSATION_DEBUG_LOGGING=true

# =============================================================================
# ADVANCED TOPIC ANALYSIS
# =============================================================================

# Enable for testing topic features
ENABLE_ADVANCED_TOPIC_ANALYSIS=true
ENABLE_ADVANCED_TOPIC_EXTRACTOR=true

# Development topic settings
TOPIC_ANALYSIS_MIN_CONFIDENCE=0.6  # Lower for more results during testing
TOPIC_CLUSTERING_MAX_TOPICS=5
TOPIC_ANALYSIS_DEBUG_OUTPUT=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enhanced debugging for development
PHANTOM_FEATURES_STEP_DEBUGGING=true
PHANTOM_FEATURES_EXECUTION_TRACING=true
PHANTOM_FEATURES_PERFORMANCE_PROFILING=true

# Test data and mock settings
PHANTOM_FEATURES_USE_MOCK_DATA=false
PHANTOM_FEATURES_GENERATE_TEST_SCENARIOS=true
PHANTOM_FEATURES_VALIDATE_OUTPUTS=true

# Development tools
PHANTOM_FEATURES_HOT_RELOAD=true
PHANTOM_FEATURES_CONFIG_VALIDATION=strict
PHANTOM_FEATURES_LINT_INTEGRATION=true

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================

# Development monitoring (lightweight)
ENABLE_PHANTOM_FEATURE_MONITORING=true
PHANTOM_FEATURES_PERFORMANCE_LOGGING=true
PHANTOM_FEATURES_METRICS_COLLECTION=false  # Disabled to reduce overhead
PHANTOM_FEATURES_DEV_DASHBOARD=true

# Conservative resource limits for development
MAX_PHANTOM_FEATURE_MEMORY_MB=256
MAX_PHANTOM_FEATURE_CPU_PERCENT=15
PHANTOM_FEATURE_RESOURCE_WARNINGS=true

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Development database settings
PHANTOM_FEATURES_DB_OPTIMIZATION=false
PHANTOM_FEATURES_DB_CONNECTION_POOL_SIZE=3
PHANTOM_FEATURES_DB_QUERY_LOGGING=true

# Development caching (optional)
PHANTOM_FEATURES_REDIS_CACHING=false
PHANTOM_FEATURES_IN_MEMORY_CACHE=true
PHANTOM_FEATURES_CACHE_TTL=300

# =============================================================================
# TESTING & VALIDATION
# =============================================================================

# Development testing features
PHANTOM_FEATURES_UNIT_TEST_MODE=false
PHANTOM_FEATURES_INTEGRATION_TEST_MODE=false
PHANTOM_FEATURES_MOCK_EXTERNAL_SERVICES=true

# Validation settings
PHANTOM_FEATURES_STRICT_VALIDATION=true
PHANTOM_FEATURES_SCHEMA_VALIDATION=true
PHANTOM_FEATURES_TYPE_CHECKING=true

# =============================================================================
# SAFETY & FALLBACKS
# =============================================================================

# Development safety settings
PHANTOM_FEATURES_FALLBACK_TO_BASIC=true
PHANTOM_FEATURES_ERROR_TOLERANCE=high  # More forgiving during development
PHANTOM_FEATURES_FAIL_FAST=false

# Development timeouts (more generous)
PHANTOM_FEATURES_MAX_PROCESSING_TIME=60
PHANTOM_FEATURES_MAX_QUEUE_SIZE=50
PHANTOM_FEATURES_REQUEST_TIMEOUT=30

# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================

# Override settings for local development convenience
LOCAL_DEV_MODE=true
SKIP_EXTERNAL_DEPENDENCIES=false
USE_LOCAL_MODELS_ONLY=false
PHANTOM_FEATURES_OFFLINE_MODE=false

# Development shortcuts
PHANTOM_FEATURES_QUICK_START=true
PHANTOM_FEATURES_SEED_DATA=true
PHANTOM_FEATURES_DEV_COMMANDS=true