# WhisperEngine Phantom Features - Basic Configuration
# Recommended for development and testing environments

# =============================================================================
# PHANTOM FEATURE CONTROLS
# =============================================================================

# Master phantom feature toggle
ENABLE_PHANTOM_FEATURES=true
PHANTOM_FEATURES_DEBUG_MODE=true
PHANTOM_FEATURES_ROLLOUT_PERCENTAGE=100

# =============================================================================
# ADVANCED EMOTION PROCESSING
# =============================================================================

# Enable advanced emotion processing systems
ENABLE_ADVANCED_EMOTION_PROCESSING=true

# LocalEmotionEngine - High-performance VADER + RoBERTa emotion analysis
ENABLE_LOCAL_EMOTION_ENGINE=true

# VectorizedEmotionProcessor - Batch emotion processing (resource intensive)
ENABLE_VECTORIZED_EMOTION_PROCESSOR=false

# AdvancedEmotionDetector - Multi-modal emotion detection
ENABLE_ADVANCED_EMOTION_DETECTOR=true

# Emotion processing performance settings (basic)
VECTORIZED_EMOTION_MAX_WORKERS=2
EMOTION_ANALYSIS_TIMEOUT=10

# =============================================================================
# ADVANCED CONVERSATION MANAGEMENT
# =============================================================================

# Enable conversation management systems
ENABLE_ADVANCED_CONVERSATION_MANAGEMENT=true

# ProactiveEngagementEngine - AI-driven conversation initiation
ENABLE_PROACTIVE_ENGAGEMENT_ENGINE=false

# AdvancedConversationThreadManager - Multi-thread conversation tracking
ENABLE_ADVANCED_THREAD_MANAGER=true

# ConcurrentConversationManager - Parallel conversation handling
ENABLE_CONCURRENT_CONVERSATION_MANAGER=false

# Conversation management settings (basic)
PROACTIVE_ENGAGEMENT_CHECK_INTERVAL=600
THREAD_MANAGER_MAX_ACTIVE_THREADS=5
CONCURRENT_CONVERSATIONS_LIMIT=10

# =============================================================================
# ADVANCED TOPIC ANALYSIS
# =============================================================================

# Enable topic analysis systems
ENABLE_ADVANCED_TOPIC_ANALYSIS=true

# AdvancedTopicExtractor - Sophisticated topic modeling
ENABLE_ADVANCED_TOPIC_EXTRACTOR=true

# Topic analysis settings
TOPIC_ANALYSIS_MIN_CONFIDENCE=0.7
TOPIC_CLUSTERING_MAX_TOPICS=10

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================

# Enable phantom feature monitoring
ENABLE_PHANTOM_FEATURE_MONITORING=true

# Performance logging
PHANTOM_FEATURES_PERFORMANCE_LOGGING=true
PHANTOM_FEATURES_METRICS_COLLECTION=true

# Resource limits for development
MAX_PHANTOM_FEATURE_MEMORY_MB=512
MAX_PHANTOM_FEATURE_CPU_PERCENT=25

# =============================================================================
# FALLBACK & SAFETY
# =============================================================================

# Fallback behavior when phantom features fail
PHANTOM_FEATURES_FALLBACK_TO_BASIC=true
PHANTOM_FEATURES_ERROR_TOLERANCE=high

# Safety limits
PHANTOM_FEATURES_MAX_PROCESSING_TIME=30
PHANTOM_FEATURES_MAX_QUEUE_SIZE=100