# WhisperEngine Phantom Features - Production Configuration
# Optimized for production environments with full feature set

# =============================================================================
# PHANTOM FEATURE CONTROLS
# =============================================================================

# Master phantom feature toggle
ENABLE_PHANTOM_FEATURES=true
PHANTOM_FEATURES_DEBUG_MODE=false
PHANTOM_FEATURES_ROLLOUT_PERCENTAGE=100

# =============================================================================
# ADVANCED EMOTION PROCESSING
# =============================================================================

# Enable all advanced emotion processing systems
ENABLE_ADVANCED_EMOTION_PROCESSING=true
ENABLE_LOCAL_EMOTION_ENGINE=true
ENABLE_VECTORIZED_EMOTION_PROCESSOR=true
ENABLE_ADVANCED_EMOTION_DETECTOR=true

# High-performance emotion processing settings
VECTORIZED_EMOTION_MAX_WORKERS=8
EMOTION_ANALYSIS_TIMEOUT=5
EMOTION_BATCH_PROCESSING_SIZE=32
EMOTION_CACHE_OPTIMIZATION=true

# GPU acceleration (if available)
USE_GPU_EMOTION_PROCESSING=false
GPU_EMOTION_BATCH_SIZE=64

# =============================================================================
# ADVANCED CONVERSATION MANAGEMENT
# =============================================================================

# Enable all conversation management systems
ENABLE_ADVANCED_CONVERSATION_MANAGEMENT=true
ENABLE_PROACTIVE_ENGAGEMENT_ENGINE=true
ENABLE_ADVANCED_THREAD_MANAGER=true
ENABLE_CONCURRENT_CONVERSATION_MANAGER=true

# Production conversation settings
PROACTIVE_ENGAGEMENT_CHECK_INTERVAL=180
THREAD_MANAGER_MAX_ACTIVE_THREADS=50
CONCURRENT_CONVERSATIONS_LIMIT=200
CONVERSATION_CONTEXT_RETENTION_HOURS=72

# Advanced engagement settings
PROACTIVE_ENGAGEMENT_MIN_INTERVAL=300
PROACTIVE_ENGAGEMENT_PERSONALITY_WEIGHT=0.8
PROACTIVE_ENGAGEMENT_EMOTION_THRESHOLD=0.6

# =============================================================================
# ADVANCED TOPIC ANALYSIS
# =============================================================================

# Enable all topic analysis systems
ENABLE_ADVANCED_TOPIC_ANALYSIS=true
ENABLE_ADVANCED_TOPIC_EXTRACTOR=true

# Production topic analysis settings
TOPIC_ANALYSIS_MIN_CONFIDENCE=0.8
TOPIC_CLUSTERING_MAX_TOPICS=25
TOPIC_SIMILARITY_THRESHOLD=0.75
TOPIC_ANALYSIS_BATCH_SIZE=16

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================

# Comprehensive monitoring for production
ENABLE_PHANTOM_FEATURE_MONITORING=true
PHANTOM_FEATURES_PERFORMANCE_LOGGING=true
PHANTOM_FEATURES_METRICS_COLLECTION=true
PHANTOM_FEATURES_DETAILED_ANALYTICS=true

# Production resource limits
MAX_PHANTOM_FEATURE_MEMORY_MB=2048
MAX_PHANTOM_FEATURE_CPU_PERCENT=60
PHANTOM_FEATURE_SCALING_ENABLED=true

# Performance optimization
PHANTOM_FEATURES_ASYNC_PROCESSING=true
PHANTOM_FEATURES_CONNECTION_POOLING=true
PHANTOM_FEATURES_RESULT_CACHING=true

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Advanced database features for phantom features
PHANTOM_FEATURES_DB_OPTIMIZATION=true
PHANTOM_FEATURES_DB_CONNECTION_POOL_SIZE=20
PHANTOM_FEATURES_DB_QUERY_TIMEOUT=30

# Caching configuration
PHANTOM_FEATURES_REDIS_CACHING=true
PHANTOM_FEATURES_CACHE_TTL=3600
PHANTOM_FEATURES_CACHE_MAX_SIZE=1000

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================

# Production security settings
PHANTOM_FEATURES_ENCRYPTION_ENABLED=true
PHANTOM_FEATURES_DATA_ANONYMIZATION=true
PHANTOM_FEATURES_AUDIT_LOGGING=true

# Privacy controls
PHANTOM_FEATURES_DATA_RETENTION_DAYS=90
PHANTOM_FEATURES_PII_SCRUBBING=true
PHANTOM_FEATURES_CONSENT_REQUIRED=true

# =============================================================================
# FALLBACK & RELIABILITY
# =============================================================================

# Production reliability settings
PHANTOM_FEATURES_FALLBACK_TO_BASIC=true
PHANTOM_FEATURES_ERROR_TOLERANCE=medium
PHANTOM_FEATURES_CIRCUIT_BREAKER_ENABLED=true

# Retry and timeout settings
PHANTOM_FEATURES_MAX_RETRIES=3
PHANTOM_FEATURES_RETRY_BACKOFF=exponential
PHANTOM_FEATURES_MAX_PROCESSING_TIME=15
PHANTOM_FEATURES_MAX_QUEUE_SIZE=500

# Health checks
PHANTOM_FEATURES_HEALTH_CHECK_INTERVAL=60
PHANTOM_FEATURES_AUTO_RECOVERY=true
PHANTOM_FEATURES_GRACEFUL_DEGRADATION=true