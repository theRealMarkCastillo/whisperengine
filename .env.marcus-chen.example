# Marcus Chen (Indie Game Developer) Bot Configuration
# Copy this to .env.marcus-chen and customize with your Discord bot token

# Discord Bot Configuration
DISCORD_TOKEN=your_marcus_chen_discord_token_here
DISCORD_BOT_NAME=Marcus Chen

# Character Configuration
CDL_DEFAULT_CHARACTER=characters/examples/marcus-chen.json

# Bot Identity
CONTAINER_NAME=marcus-chen-bot

# Infrastructure Endpoints (shared with other bots)
POSTGRES_HOST=postgres
REDIS_HOST=redis
QDRANT_HOST=qdrant

# Database Configuration (shared)
POSTGRES_DB=whisperengine
POSTGRES_USER=whisperengine
POSTGRES_PASSWORD=whisperengine_password

# Vector Memory Configuration
QDRANT_COLLECTION_NAME=whisperengine_memory
VECTOR_DIMENSION=384

# Model Configuration
MODEL_CACHE_DIR=/app/models
DISABLE_MODEL_DOWNLOAD=true
HF_HUB_OFFLINE=false
TRANSFORMERS_OFFLINE=0

# Logging
LOG_LEVEL=INFO
DEBUG_MODE=false
PYTHONUNBUFFERED=1

# Health Check
HEALTH_CHECK_PORT=9093
HEALTH_CHECK_HOST=0.0.0.0

# Performance
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# Memory and AI Configuration
MEMORY_SYSTEM_TYPE=vector
LLM_CLIENT_TYPE=openrouter
VOICE_SERVICE_TYPE=disabled
ENGAGEMENT_ENGINE_TYPE=full

# Environment
ENVIRONMENT=production